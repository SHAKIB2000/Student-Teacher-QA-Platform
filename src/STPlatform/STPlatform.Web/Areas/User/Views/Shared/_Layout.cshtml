<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - ST Platform</title>
    @await RenderSectionAsync("Styles", required: false)
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <header class="mb-5 py-3">
        <nav class="navbar navbar-expand-lg bg-body-tertiary fixed-top border-bottom">
            <div class="container">
                <a class="navbar-brand fw-bold fs-4" asp-area="" asp-controller="" asp-action="">ST<span class="text-danger">Platform</span></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mx-auto mb-lg-0 p-1">
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark" aria-current="page" asp-area="User" asp-controller="Student" asp-action="Dashboard"><i class="fa-solid fa-home fa-sm"></i> Home</a>
                        </li>
                       
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark" asp-area="" asp-controller="" asp-action=""><i class="fa-solid fa-clipboard-question"></i> My Q&A</a>
                        </li>
                        <li class="nav-item me-3">
                            <a class="nav-link text-dark" asp-area="User" asp-controller="Student" asp-action="AskQuestion"><i class="fa-solid fa-circle-question"></i> Ask Question</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>

    </header>



    <div class="container-fluid">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-body-tertiary border-top mt-5">
        <div class="container">
            <footer class="py-5">
                <div class="d-flex justify-content-between py-1 my-1 border-top">
                    <p>&copy; 2024 Student Teacher Q & A Platform, All rights reserved.</p>
                    <ul class="list-unstyled d-flex">
                        <li class="ms-3"><a class="link-dark" href="#"><i class="fa-brands fa-twitter"></i></a></li>
                        <li class="ms-3"><a class="link-dark" href="#"><i class="fa-brands fa-github fa-lg"></i></li>
                        <li class="ms-3"><a class="link-dark" href="#"><i class="fa-brands fa-facebook fa-lg"></i></a></li>
                    </ul>
                </div>
            </footer>
        </div>
    </footer>
    <!-- inject:js-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
    @*<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-fbbOQedDUMZZ5KreZpsbe1LCZPVmfTnH7ois6mU1QK+m14rQ1l2bGBq41eYeM/fS" crossorigin="anonymous"></script>*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
