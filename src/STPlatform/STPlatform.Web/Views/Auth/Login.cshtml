@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<section>
    <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <h1 class="text-dark text-center fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign In ST<span class="text-danger">Platform</span></h1>
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                     class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form id="account" method="post" asp-antiforgery="true" asp-controller="Auth" asp-action="Login" asp-area="" asp-route-returnurl="~/">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start mt-5">
                        <p class="lead fw-normal mb-0 me-3">Sign in with</p>
                        <button type="button" class="btn btn-primary rounded-pill mx-1">
                            <i class="fab fa-facebook-f"></i>
                        </button>

                        <button type="button" class="btn btn-primary rounded-pill mx-1">
                            <i class="fab fa-twitter"></i>
                        </button>

                        <button type="button" class="btn btn-primary rounded-pill mx-1">
                            <i class="fab fa-linkedin-in"></i>
                        </button>
                    </div>

                    <div class="divider d-flex align-items-center my-4">
                        <p class="text-center fw-bold mx-3 mb-0">Or</p>
                    </div>

                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Email" class="form-label">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <input asp-for="Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Password" class="form-label">Password</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between align-items-center">
                        <!-- Checkbox -->
                        <div class="form-check mb-0">
                            <label asp-for="RememberMe" class="form-check-label">
                                <input class="form-check-input me-2" type="checkbox" asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                        <a id="forgot-password" class="text-body" asp-page="">Forgot password?</a>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button id="login-submit" type="submit" class="btn btn-danger rounded-pill shadow px-4">Sign In</button>
                        <p class="small fw-bold mt-3 pt-1 mb-0">
                            Don't have an account?
                            <a class="link-danger" asp-area="" asp-controller="Auth" asp-action="Register" asp-route-returnUrl="@Model.ReturnUrl">Sign Up</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>

</section>
